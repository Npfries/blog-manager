generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Blogpost {
  id        Int     @id @default(autoincrement())
  uuid      String @unique
  title     String
  content   String
  author    String
  authorUuid String 
  authorHandle String 
  postUuid  String @unique
  deleted   Boolean @default(false)
  slug      String @unique // <authorHandle>/<title>
}

